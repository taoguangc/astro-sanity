---
import { sanityClient } from "sanity:client";
import { type Post } from '@/types/Post'

const posts = await sanityClient.fetch(`*[_type == "post" && defined(slug)] | order(publishedAt desc)`);
---

<h1>Blog</h1>
<ul>
  {posts.map((post: Post) => (
    <li>
      <a href={'/posts/' + post?.slug.current} class="post-link">
        {post?.title}
      </a>
    </li>
  ))}
</ul>